    <body>
        <div class="container">
            {{>nav}}
            <form action="/squeek" method="POST">
                <div class="row">
                    <div class="col-lg-3">
                        <textarea name="squeek" id="squeek" cols="10" rows="2" class="form-control"></textarea>
                        <br>
                        <button class="btn btn-primary">Send</button>
                    </div>
                </div>
            </form>
            <br>
            <div class="row">
                <div class="col-lg-4 push-4">
                    {{#each squeeks}}
                        <span class="text-muted">{{createdOn}}</span>
                        <p>{{message}}</p>
                    {{/each}}
                </div>
            </div>
        </div>
